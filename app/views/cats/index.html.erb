<h1>Index</h1>
<table>
  <tr>
    <th></th>
  </tr>
  <% @cats.each do |cat| %>
    <tr>
        <td>Name: <%= link_to cat.name, cat_path(cat) %></td>   
        <td>Age: <%= cat.age %></td>
        <td>Weight: <%= cat.weight %></td>
        <td>Eye Color: <%= link_to cat.eye_color, cat_path(cat) %></td>
        <td><%= link_to 'Edit cat', edit_cat_path(cat) %></td>
    </tr>
  <% end %>
</table>

